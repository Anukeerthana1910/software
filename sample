//sample code for reports test and screenshot 
package runner;

import java.io.IOException;
import java.net.MalformedURLException;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.testng.annotations.AfterMethod;
import org.testng.annotations.AfterSuite;
import org.testng.annotations.BeforeMethod;
import org.testng.annotations.BeforeSuite;
import org.testng.annotations.Test;

import com.aventstack.extentreports.ExtentReports;
import com.aventstack.extentreports.ExtentTest;

import utils.Base;
import utils.LoggerHandler;
import utils.Reporter;
import utils.Screenshot;

public class TestSample extends Base{
    WebDriver driver;
    ExtentReports report;
    ExtentTest test;
    @BeforeSuite
    public void startReport()
    {
        report=Reporter.generateExtentReport("/reports");

    }
    @BeforeMethod
    public void launchBrowser() throws MalformedURLException {
        // launch your browser
        driver=openBrowser();
    }

    @Test
    public void testOne() throws IOException {
        // write or call ur pages here

        // driver.findElement(By.name("username")).sendKeys("Email009@email.com");
        test=report.createTest("Login");
        driver.findElement(By.name("username")).sendKeys("Email009@email.com");
        LoggerHandler.initLog4j();
        LoggerHandler.logInfo("login");
        driver.findElement(By.name("pw")).sendKeys("password@009");
        driver.findElement(By.id("rememberUn")).click();
        driver.findElement(By.id("Login")).click();
        Screenshot.getScreenShot(driver,"screenshot/screen.png");
    }
    @Test
    public void testonee()
    {
        driver.findElement(By.id("forgot_password_link")).click();
    }
    @AfterMethod
    public void tearDown() {
        // quit the driver here
        if(driver!=null)
        {
            driver.quit();
        }
    }
    @AfterSuite
    public void close()
    {
        report.flush();
    }
}
